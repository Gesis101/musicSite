{% extends 'base.html.twig' %}

{% block title %}{{ controller_name }}{% endblock %}

{% block body %}
    <div class="album_head text-white bg-dark text-center pt-5">
        <div class="album_headContainer p-5">
            <h1 class="pt-5"> YOUR ALBUMS IN ONE PLACE</h1>
            <p> See reviews in our place </p>
        </div>
    </div>

    <div class="album_1 text-center ">
    <div class="container h-auto mb-5 album_container shadow-lg bg-light rounded">
        {#<h1> finna put some imgs to left side. Artist, title, rating and description too.</h1> #}
        <div class="row pb-5 h-100 d-flex justify-content-center align-items-center ">
            <div class="col-12 border-bottom flex-column">
                <form class="d-inline-flex align-self-center ">
                  {#  <input class="form-control text-white" type="search" placeholder="Search"
                           aria-label="Search">
                    <button class="btn btn-outline-info my-2 my-sm-0 " type="submit">Search</button>#}
                    <div class="d-flex  ">
                        {# Use this space for filters & use one form to submit.#}
                        <div class="input-field form-inline pr-2 ">
                            <select class="form-control p-1" name="genre">
                                <option value="" disabled selected>By Genre</option>
                                <option value="Hip-Hop">Hip-Hop</option>
                                <option value="Classic">Classic</option>
                                <option value="Rock">Rock</option>
                                <option value="RnB">RnB</option>
                                <option value="K-Pop">K-Pop</option>
                            </select>
                        </div>
                        {% if app.user %}
                        <div class=" pr-2 form-inline">
                            <select class="form-control p-1" name="favourite">
                                <option value="" disabled selected>By Favourites</option>
                                <option value="2">All</option>
                                <option value="3">My favourite</option>
                            </select>
                        </div>
                        {% endif %}
                        <div class=" pr-2 form-inline">
                            <select class="form-control p-1" name="rating">
                                <option value="" disabled selected>Avg. Rating</option>
                                <option value="2">Low rating </option>
                                <option value="3">Medium rating</option>
                                <option value="5">High Rating</option>
                            </select>
                        </div>

                        <div class="form-inline p-1 ">
                            <input class="form-control " type="search" placeholder="Look for album..." name="query" >
                            <button class="form-control btn" type="submit"><i class="large material-icons">search</i></button>
                        </div>
                    </div>
                </form>
                <button><a> Add an album </a></button>
            </div>

            {# Album content to be shown below  #}

            <div class="row m-5 h-100 d-flex justify-content-center align-items-center">
                {#
             - Album cover
             - Artist
             - Title
             - First 3 track lists
             - Stars 1/5
             - reviews
         #}
               {# <li class="list-inline-item">{{ top3Tracks}} </li>#}
                {% if error %}
                    <div class="alert alert-danger  mb-1"> {{ error }}</div>
                {% endif %}
                {% for album in albums %}
                <div  class="col-lg-12 col-md-12 col-sm-12 ">
                    <div class="card flex-row mb-4 box-shadow w-100 text-left " style="min-width: 100%">
                        <img class="card-img-right flex-auto d-none d-md-block" data-src="holder.js/200x250?theme=thumb" alt="Album Cover [150x250]" style="width: 275px; height: 250px;" src="data:image/svg+xml;charset=UTF-8,%3Csvg%20width%3D%22200%22%20height%3D%22250%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%20200%20250%22%20preserveAspectRatio%3D%22none%22%3E%3Cdefs%3E%3Cstyle%20type%3D%22text%2Fcss%22%3E%23holder_16f5920ac4c%20text%20%7B%20fill%3A%23eceeef%3Bfont-weight%3Abold%3Bfont-family%3AArial%2C%20Helvetica%2C%20Open%20Sans%2C%20sans-serif%2C%20monospace%3Bfont-size%3A13pt%20%7D%20%3C%2Fstyle%3E%3C%2Fdefs%3E%3Cg%20id%3D%22holder_16f5920ac4c%22%3E%3Crect%20width%3D%22200%22%20height%3D%22250%22%20fill%3D%22%2355595c%22%3E%3C%2Frect%3E%3Cg%3E%3Ctext%20x%3D%2256.1953125%22%20y%3D%22131%22%3EThumbnail%3C%2Ftext%3E%3C%2Fg%3E%3C%2Fg%3E%3C%2Fsvg%3E" data-holder-rendered="true">
                        <div class="card-body d-flex flex-column text-center ">
                                {% if is_granted('ROLE_USER') %}
                                    <form  class="">
                                    {% for c in app.user.getAlbumFav %}

                                        {% if album.id  ==  c.id %}
                                        <input type="hidden"  value="{{album.id}}" name="remove">
                                        <input class="d-block " type="button" src="{{ asset('build/images/bookmark.png') }}" value="{{ album.id }}" name="remove"  alt="bookmark" width="20" height="20">
                                        {% endif %}
                                    {% endfor %}
                                        {% for c in app.user.getAlbumFav|slice(0,1) %}
                                            {% if album.id  !=  c.id %}
                                        <input type="hidden" value="{{ album.id }}" name="add">
                                        <input class="d-block " type="button" src="{{ asset('build/images/unbookmark.png') }}" value="{{ album.id }}" name="add"  alt="unbookmark" width="20" height="20">
                                            {% endif %}
                                        {% endfor %}
                                       {# {% if userFav.albums.id == album.userFav.user.id%}
                                            <input type="hidden"  value="{{album.id}}" name="remove">
                                            <input class="d-block " type="image" src="{{ asset('build/images/bookmark.png') }}" value="{{ album.id }}" name="remove"  alt="bookmark" width="20" height="20">
                                        {% else %}
                                            <input type="hidden" value="{{ album.id }}" name="add">
                                            <input class="d-block " type="image" src="{{ asset('build/images/unbookmark.png') }}" value="{{ album.id }}" name="add"  alt="unbookmark" width="20" height="20">
                                        {% endif %}#}

                                        {# End role user if below#}
                                  {% endif %}

                                    </form>
                                <div class="d-inline-flex align-self-center  text-center pb-2 " style="">

                                <small class="text-muted pr-1 " style="">Title </small>
                                <h1 class="mr-3 pr-3 border-right border-dark card-title" style="text-align: center;font-size: medium">
                                    <a class="text-dark text-capitalize" href="#">{{ album.title }} </a>
                                </h1>

                                <small class="text-muted pr-1">Artist </small>
                                <h1 class="mr-3 pr-3 border-right border-dark card-title" style="text-align: center;font-size: medium">{{ album.artist }}</h1>

                                <small class="text-muted pr-1 small-text-center" style="">Genre </small>
                                <h1 class="mr-3 pr-3 border-dark card-title" style="text-align: center;font-size: medium">{% if album.genre %}{{ album.genre}} {% else %} Unknown {% endif %}</h1>

                            </div>

                            <div class="pt-3 d-inline-block align-self-center border-bottom mb-2 w-100 ">
                                <h5 class="text-capitalize text-center"> Top 3 tracks</h5>
{#                                if track name over 10 chars then add ... instead#}
                                <ul class="list-group ">
                                    {% for songs in album.songs|slice(0,2) %}
                                        <li class="list-group">
                                            <p class="text-center m-0 text-left" style="text-align: center;font-size: medium">
                                            {{ songs.songName }}
                                            </p>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                            {# Top 3 comments will be displayed below #}
                            <div class=" align-self-center text-left w-75">
                                <small> ({{ album.reviews | length }})</small>
                                    {% for comment in  album.reviews %}
                                <div class="pt-1 border-bottom">
                                        <p class="card-text m-0 w-100" style="font-family: 'Dialog',sans-serif; font-size: .9em"> <span class="text-success text-capitalize"> {% if is_granted('ROLE_USER') %} {{comment.authorName.username}} {% else %} <span class="text-muted"> User Hidden </span>  {% endif %}</span> says: {{ comment.comment }} </p>
                                </div>
                                    {% endfor %}
                            </div>
                            {% if is_granted('ROLE_USER') %}
                            <a class="text-center" href="{{  path('album_show', {id: album.id}) }}" style="font-size: small">See more ..</a>
                            {% else %}
                                <a class="text-center" href="{{  path('app_login') }}" style="font-size: small">Log in to see more ..</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
            </div>
        </div>
    </div>
    </div>
{% endblock %}