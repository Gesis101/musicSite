<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link rel="stylesheet" type="text/css" href="{{ asset('build/app.css') }}"/>
        {% endblock %}

    </head>
    <body>
    {% block header %}
        <div class="header bg-dark text-light">
            <header>
                <nav class="navbar navbar-expand-md navbar-dark bg-dark">
                    <a class="navbar-brand" href="#">{{ block('title')}}</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <form class="form-inline my-2 my-lg-0 col-lg-7 col-md-6 col-sm-12 d-sm-inline">
                        <input class="form-control col-sm-8 col-md-8 " type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-info my-2 my-sm-0 col-sm-2 col-md-4 " type="submit">Search</button>
                    </form>
                    <div class="collapse navbar-collapse  " id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto ">
                            <li class="nav-item active ">
                                <a class="nav-link" href="{{ path('app_home_index') }}">Home <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('albums', { id: 'ignore for now' }) }}">Albums</a>
                            </li>
                            {% if is_granted('ROLE_USER') %}
                            <li class="nav-item">
                                <a class="nav-link " href="{{ path('account') }}">Account</a>
                            </li>
                            {% endif %}
                            <li class="nav-item">
                                {% if app.user == true %} <!-- sort this out later -->
                                    <a class="nav-link " href="{{ path('app_logout') }}">Log out</a>
                                {% else %}
                                    <a class="nav-link " href="{{ path('app_login') }}">Log in</a>
                                {% endif %}
                            </li>
                            {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a class="nav-link " href="{{ path('account') }}">ADMIN PANEL</a>
                            </li>
                            {% endif %}
                        </ul>

                    </div>
                </nav>
                </div>
            </header>
        </div>
    {% endblock %}
      <div id="content">{% block body %} {% endblock %}  </div>


       <div id="footer">
           {%block footer %} <div class="foot-wrapper ">
               <footer class=" fixed-bottom text-center text-light bg-dark">
                   <p> Hi this is the footer</p>
                   <p> Copyright Thabo </p>
               </footer>
           </div>
           {%endblock %}
       </div>

        <!-- Load JS last bro -->
        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('build/app.js') }}"></script>
        {% endblock %}

    </body>
</html>
